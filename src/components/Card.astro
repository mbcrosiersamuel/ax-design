---
interface Company {
  name: string;
  logo?: string;
}

interface Props {
  title: string;
  companies: Company[];
  verdict: 'good' | 'bad';
  summary: string;
  date: Date;
  slug: string;
  heroImage?: string;
  tags?: string[];
}

const { title, companies, verdict, summary, date, slug, heroImage, tags = [] } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(date);
---

<article class="card">
  <a href={`/gallery/${slug}`} class="card__link">
    {heroImage && (
      <div class="card__image">
        <img src={heroImage} alt={`${companies.map(c => c.name).join(', ')} - ${title}`} loading="lazy" />
      </div>
    )}

    <div class="card__content">
      <div class="card__header">
        <span class:list={['card__badge', `card__badge--${verdict}`]}>
          {verdict === 'good' ? 'Good AX' : 'Bad AX'}
        </span>
        <time class="card__date" datetime={date.toISOString()}>
          {formattedDate}
        </time>
      </div>

      <h3 class="card__title">{title}</h3>
      <div class="card__companies">
        {companies.map((company) => (
          <div class="card__company">
            {company.logo && (
              <img
                src={company.logo}
                alt={`${company.name} logo`}
                class="card__company-logo"
              />
            )}
            <span class="card__company-name">{company.name}</span>
          </div>
        ))}
      </div>
      <p class="card__summary">{summary}</p>

      {tags.length > 0 && (
        <div class="card__tags">
          {tags.map((tag) => (
            <span class="card__tag">{tag}</span>
          ))}
        </div>
      )}
    </div>
  </a>
</article>

<style>
  .card {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-base);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
    border-color: var(--color-accent);
  }

  .card__link {
    display: flex;
    flex-direction: column;
    height: 100%;
    color: inherit;
  }

  .card__image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--color-bg-subtle);
  }

  .card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .card:hover .card__image img {
    transform: scale(1.05);
  }

  .card__content {
    padding: var(--space-6);
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
  }

  .card__badge {
    display: inline-flex;
    align-items: center;
    padding: var(--space-1) var(--space-3);
    font-size: var(--text-xs);
    font-weight: 600;
    border-radius: var(--radius-full);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card__badge--good {
    background: var(--color-good-bg);
    color: var(--color-good);
  }

  .card__badge--bad {
    background: var(--color-bad-bg);
    color: var(--color-bad);
  }

  .card__date {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .card__title {
    font-size: var(--text-xl);
    font-weight: 600;
    line-height: var(--line-tight);
  }

  .card__companies {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    align-items: center;
  }

  .card__company {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-muted);
  }

  .card__company-logo {
    width: 20px;
    height: 20px;
    object-fit: contain;
    border-radius: var(--radius-sm);
  }

  .card__company-name {
    line-height: 1;
  }

  .card__summary {
    font-size: var(--text-sm);
    line-height: var(--line-relaxed);
    color: var(--color-text-muted);
    flex: 1;
  }

  .card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: var(--space-2);
  }

  .card__tag {
    font-size: var(--text-xs);
    padding: var(--space-1) var(--space-2);
    background: var(--color-bg-subtle);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .card__content {
      padding: var(--space-4);
    }

    .card__title {
      font-size: var(--text-lg);
    }
  }
</style>
